//- Global template vars
- var date = new Date();
- var cachebust = '?'+date.getHours()+''+date.getDate();

doctype 5
html
	head
		meta(charset='UTF-8')
		meta(http-equiv='Content-Language', content='en')
		meta(name='viewport', content='width=device-width')
		meta(name='author', content='The Workers London Ltd.')
		meta(name='apple-mobile-web-app-capable',           content='yes')
		meta(name='apple-mobile-web-app-status-bar-style',  content='black')
		meta(http-equiv='imagetoolbar',     content='false')
		meta(http-equiv='X-UA-Compatible',  content='IE=edge,chrome=1')
		meta(name="google-site-verification", content="5ED_CojmDIY-Vcu9E1gJf1NpFzlENz7x9wzlyBp-abw")
		block title
			title Sidekick Creatives
		block description
			meta(name='description', content='Sidekick Creatives supports creative projects to be successfully launched on crowdfunding platforms.')
		block stylesheets
			link(rel='stylesheet', type='text/css', href='/css/reset.css')
			link(rel='stylesheet', type='text/css', href='/css/style.css' +cachebust)
		block headScripts
			script(src='/js/lib/html5shiv-printshiv.js')
	body
		header
			h1 Sidekick Creatives
			block header
				div.logo

		section#root
			block content

		footer
			p.hidden Website by 
				a(href='//theworkers.net/', title='The Workers') The Workers.
			block footer
				p.inline.button.contact: a(href='mailto:hello@sidekickcreatives.com') Contact
				p.inline.button.facebook: a(href='//www.facebook.com/SidekickCreatives') Facebook
				p.inline.button.twitter: a(href='//twitter.com/sidekickcrea') Twitter

	block bodyscripts
		script(src='/js/lib/jquery-1.8.3.min.js')
		script(src='/js/lib/underscore-min.js')
		script(src='/js/o.js' +cachebust)
		script(src='/js/Util.js' +cachebust)
		script(src='/js/ui.js' +cachebust)
