//- Global template vars
- var date = new Date();
- var cachebust = '?'+date.getHours()+''+date.getDate();

doctype 5
html
	head
		meta(charset='UTF-8')
		meta(http-equiv='Content-Language', content='en')
		meta(name='viewport', content='initial-scale=1.0', user-scalable='no')
		meta(name='author', content='The Workers London Ltd.')
		meta(name='apple-mobile-web-app-capable',           content='yes')
		meta(name='apple-mobile-web-app-status-bar-style',  content='black')
		meta(http-equiv='imagetoolbar',     content='false')
		meta(http-equiv='X-UA-Compatible',  content='IE=edge,chrome=1')
		block title
			title Sidekick Creatives
		block description
			meta(name='description', content='Sidekick Creatives supports creative projects to be successfully launched on crowdfunding platforms.')
		block stylesheets
			link(rel='stylesheet', type='text/css', href='/static/css/reset.css')
			link(rel='stylesheet', type='text/css', href='/static/css/style.css' +cachebust)
		block headScripts
			script(src='/static/js/lib/html5shiv-printshiv.js')
	body
		header
			h1 Sidekick Creatives
			block header
				div.logo

		section#root
			block content

		footer
			block footer

	block bodyscripts
		script(src='/static/js/lib/jquery-1.8.3.min.js')
		script(src='/static/js/lib/underscore-min.js')
		script(src='/static/js/o.js' +cachebust)
		script(src='/static/js/Util.js' +cachebust)
		script(src='/static/js/ui.js' +cachebust)
		script
			var sc_project = 8670875;
			var sc_invisible = 1;
			var sc_security = "14c8ce86";
			var scJsHost = (("https:" == document.location.protocol) ? "https://secure." : "http://www." );
			var script = document.createElement('script');
			script.src = scJsHost + "statcounter.com/counter/counter.js";
			document.body.insertBefore(script, null)
